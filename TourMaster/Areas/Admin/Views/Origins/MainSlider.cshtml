@using TourMaster.Models;
@model IEnumerable<MainSliderImage>
@{
    ViewBag.Title = "MainSlider";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card border-primary">
    <div class="card-header">
        <h2>Main Slider Images</h2>
    </div>
    <div class="card-body">
        <div class="actual-images mb-3">
            <div class="row">
                <ul class="list-inline" id="sliderimages">
                    @foreach (MainSliderImage image in Model)
                    {
                        <li class="list-inline-item w-25 text-center" data-img-id="@image.Id">
                            <div class="w-100 h-100 img" style="background-image: url(@image.ImageURL)"></div>
                            <i class="icon-close text-danger"></i>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <form action="@Url.Action("upload", new { controller = "origins", area = "admin" })" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label">Upload Images</label>
                <input class="form-control" type="file" name="images" multiple/>
            </div>
            <div class="form-group">
                <div id="dynamicImage">

                </div>
            </div>
            <div class="form-buttons">
                <button class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

<div class="modal fade text-center" id="deleteWarningModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-warning modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Image</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p>You want to delete this image. Are you sure?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" id="confirmDelete" data-dismiss="modal">Yes</button>
                <button type="button" class="btn btn-danger" id="cancelDelete" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade text-center" id="dangerModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-danger" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Slider Image</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p>You can not delete this image, there should be at least 1 image.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>